//L'aphabet à partir de ...
//créer un programme qui affiche l'alphabet à partir de la lettre donnée en argument en lettres minuscules suivi d'un retour  à la ligne


//on doit aller chercher la lettre de départ dans l'argument
//on utiliser cette lettre pour lancer la fonction
//on dois lancer cette fonction qui écrit l'alphabet à partir de cette lettre

const AZ = ["a","b","c","d","e","f","g","h","i","j","k","l","m","n","o","p","q","r","s","t","u","v","w","x","y","z"];

function afficherAPartirDe(lettre) {
    let indexLettre = AZ.indexOf(lettre.toLowerCase());
    if (indexLettre === -1) {
        return "La lettre spécifiée n'est pas dans l'alphabet.";
    }
    let alphabetAPartiDe = "";
    for (let i = indexLettre; i < AZ.length; i++) {
        alphabetAPartiDe += AZ[i] + " ";
    }
    return alphabetAPartiDe;
}

console.log(afficherAPartirDe("e"));
